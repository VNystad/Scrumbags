@using Gameblasts.Models
@model Gameblasts.Models.PostViewModels.AddEditPostViewModel

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>


@if (SignInManager.IsSignedIn(User))
{
    <h1> Submit a Post!</h1>

    <form asp-controller="Post" asp-action="AddPost" class="form-horizontal" role="form">
        <div class="form-group" style="background-color: #808080">
            <br>
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="Title">
            </div>
            <label asp-for="SubCategory" class="col-md-2 control-label"></label>
             <div class="col-md-2">   
                <input asp-for="SubCategory" type="hidden" value="UnrealTournamentNews">
            </div>
            <label asp-for="Body" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <textarea asp-for="Body" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 cold-md-10">
                <input type="submit" value="Submit">
            </div>
        </div>
    </form>
}
else
{
    <div class="row">
        <p>Please Login to add a blog post!</p>
    </div>
}
