@model Gameblasts.Models.CategoryModels.CategoryModel

<div class="row">
    <div class="col-md-6">
        <br><br>
        <p>@Model.name</p>
        <p>@Model.parent.name</p>
        <p>@Model.parent.id</p>
      @using (Html.BeginForm("AddSubCategoryDemo", "Category", "CategoryFormModel"))
    {
        @Html.Hidden("parentID", @Model.parent.id)
        @Html.TextArea("name")
        <button type="submit" class="btn btn-default">Add Category</button>
    }
    </div>
</div>

@for (int i = 0; i < Model.threads.Count; i++)
{
        Html.RenderPartial("_Post", Model.threads[i]);
}
