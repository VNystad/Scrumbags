@using Gameblasts.Models.CategoryModels
@model Gameblasts.Models.Post

@inject SignInManager<ApplicationUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    
    <h2 style="padding-left: 200px"> Submit a Reply!</h2>
    <div class ="container">
    <form asp-controller="Post" asp-action="AddReply" class="form-horizontal" role="form" id="submitreply">
        <div class="form-group" id="Reply">
                <input asp-for="Title" value="reply" type="hidden">
                <input asp-for="SubCategory" type="hidden" value=@Model.SubCategory>
                <input asp-for="parentPost" type="hidden" value=@Model.Id>
                <label asp-for="Body" class="col-md-2 control-label" id="blank"> </label>
                    <textarea asp-for="Body"style="width:600px; height: 200px"> </textarea>    
        </div>
        <div class="form-group" id="submitreply">
            <div class="col-md-offset-2 cold-md-10" id="blank">
                <input type="submit" value="Submit" id="submitreply" style="width: 100px">
            </div>
        </div>
    </form>
    </div>
    

}
else
{
    <div class="row">
        <p>Please Login to add a blog post!</p>
    </div>
}
