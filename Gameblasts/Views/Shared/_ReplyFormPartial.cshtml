@using Gameblasts.Models.CategoryModels
@model Gameblasts.Models.Post

@inject SignInManager<ApplicationUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <h2> Submit a Reply!</h2>
    <form asp-controller="Post" asp-action="AddReply" class="form-horizontal" role="form" id="blank">
        <div class="form-group">
            <br>
            <label asp-for="Title" class="col-md-2 control-label" id="blank"></label>
            <div class="col-md-2" id="blank">
                <input asp-for="Title">
            </div>
             <div class="col-md-2" id="blank">   
                <input asp-for="SubCategory" type="hidden" value=@Model.SubCategory>
                <input asp-for="parentPost" type="hidden" value=@Model.Id>
            </div>
            <div class="row"></div>
            <div class="row">
                <label asp-for="Body" class="col-md-2 control-label" id="blank"></label>
                <div class="col-md-2" id="blank">
                    <textarea asp-for="Body" rows="5"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 cold-md-10" id="blank">
                <input type="submit" value="Submit" id="blank">
            </div>
        </div>
    </form>
}
else
{
    <div class="row">
        <p>Please Login to add a blog post!</p>
    </div>
}
