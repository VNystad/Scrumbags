@model IEnumerable<Gameblasts.Models.ChatMessage>
    
@inject SignInManager<ApplicationUser> SignInManager
<!--ChatBox skal bare vises hvis brukeren er logget inn.-->
@if (SignInManager.IsSignedIn(User))
{
    <div id="wrapper">
        <div id="menu">
            <!--Gi en velkommen melding til brukeren som er logget inn.-->
            <p1 class="welcome">Hello <a href="/User/@User.Identity.Name">@User.Identity.Name</a> !</p1>
            <div style="clear:both"></div>
        </div>
        <div id="chatbox">
            <!--Her skal meldinger brukerne skriver komme.-->
            @foreach(var s in Model)
            {
                Html.RenderPartial("_ChatMessage", s);
            }                    
            <!-- ________________________________________ -->
        </div>
        <form method="POST">
            <input name="message" type="text" id="chatmessage" size="63" placeholder="Write the message" />
            <input name="submit" type="submit" id="submitmessage" value="Send" />
        </form>
    </div>
}