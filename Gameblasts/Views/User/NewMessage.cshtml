@model Gameblasts.Models.MessageViewModels.MessageViewModel

@{
    ViewData["Title"] = "New Msg";
}

<h2  style="color:white">@ViewData["Title"]</h2>


<form asp-controller="User" asp-action="NewMessage" method="post" class="form-horizontal"  style="color:white">
    <div class="form-group">
        <label asp-for="Receiver" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Receiver" value="@Model.Receiver" class="form-control" />
            <!--<span asp-validation-for="ImgAdress" class="text-danger"></span>-->
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Subject" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Subject" class="form-control" />
            <!--<span asp-validation-for="ImgAdress" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Msg" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Msg" class="form-control" />
            <!--<span asp-validation-for="Password" class="text-danger"></span>-->
        </div>
    </div>

    <div class="form-group">
            <div class="col-md-offset-2 cold-md-10">
                <input type="submit" value="Send">
            </div>
        </div>
</form>