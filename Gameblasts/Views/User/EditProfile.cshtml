@model Gameblasts.Models.ProfileViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<h2>@ViewData["Title"]</h2>


<form asp-controller="Profile" asp-action="EditProfile" method="post" class="form-horizontal">
    <br>
    <div class="form-group">
        <label asp-for="ImgAdress" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ImgAdress" class="form-control" />
            <!--<span asp-validation-for="ImgAdress" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Location" class="form-control" />
            <!--<span asp-validation-for="Password" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Age" class="form-control" />
            <!--<span asp-validation-for="Password" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Gender" class="form-control" />
            <!--<span asp-validation-for="ConfirmPassword" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SocialMediaNames" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="SocialMediaNames" class="form-control" />
            <!--<span asp-validation-for="ConfirmPassword" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <label asp-for="About" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="About" class="form-control" />
            <!--<span asp-validation-for="ConfirmPassword" class="text-danger"></span>-->
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.HiddenFor(model => model.Username)
            <button type="submit" class="btn btn-Info">Edit</button>
        </div>
    </div>
</form>

