@model IEnumerable<Gameblasts.Models.ChatMessage>

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/Chatbox.css" asp-append-version="true" />
    <meta http-equiv="refresh" content="20" />
</head>


@if (SignInManager.IsSignedIn(User))
{
    <h1>Hello <a href="/Profile/Profile/@User.Identity.Name">@User.Identity.Name</a> and welcome to <br> <img src="/images/Gameblasts.png"style="width:700px;height:700ppx;position:relative;"></h1>
}
else
{
    <h1>Hello Guest and welcome to <br> <img src="/images/Gameblasts.png"style="width:700px;height:700ppx;position:relative;"></h1>
}

<div class="row">
    <div class="col-sm-2">
        <iframe src="https://discordapp.com/widget?id=157530644996423680&theme=dark" width="350" height="500" allowtransparency="true" frameborder="0"></iframe>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-2"></div>
    <div class="col-sm-6">
        <!--ChatBox skal bare vises hvis brukeren er logget inn.-->
        @if (SignInManager.IsSignedIn(User))
        {
            <div id="wrapper">
                <div id="menu">
                    <!--Gi en velkommen melding til brukeren som er logget inn.-->
                    <p1 class="welcome">Hello <a href="/Profile/Profile/@User.Identity.Name">@User.Identity.Name</a> !</p1>
                    <div style="clear:both"></div>
                </div>
                <div id="chatbox">
                    <!--Her skal meldinger brukerne skriver komme.-->
                    @foreach(var s in Model)
                    {
                        Html.RenderPartial("_ChatBox", s);
                    }                    
                    <!-- ________________________________________ -->
                </div>
                <form method="POST">
                    <input name="message" type="text" id="chatmessage" size="63" placeholder="Write the message" />
                    <input name="submit" type="submit" id="submitmessage" value="Send" />
                </form>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <h1> FAQ: </h1>
        <ul id="hmpge">
            <li><b>Q: What is this site and what is it for?</b></li>
            <li>A: This site is a discussion forum and it's for e-sport and gaming.</li>
            <br>
            <li><b>Q: Why was this site made?</b></li>
            <li>A: This site was made as a school project as we thought the e-sport community scene could use a proper site and forum.</li>
            <br>
            <li><b>Q: Are you affiliated with any of the games?</b></li>
            <li>A: No, we are not. This site was made purely for entertainment and learning.</li>
            <br>
            <li><b>Q: Will the site keep being updated after project deadline?</b></li>
            <li>A: Our hope is to continue working on it, but it all depends on the individual member of the forum team.</li>
        </ul>
    </div>
    <div class="col-sm-6">
        <h1> Contact Us: </h1>
        <ul id="hmpge">
            <li>Mail: To come</li>
            <br>
            <li>Discord: <a href="https://discord.gg/YhdxFme">https://discord.gg/YhdxFme</a></li>
            <br>
            <li>Twitter: To come</li>
            <br>
            <li>Facebook: To come</li>
        </ul>
    </div>
</div>